# Server
NODE_ENV=production
PORT=3000
HOST=0.0.0.0

# Database
DB_HOST=localhost
DB_PORT=5432
DB_NAME=voucher_system
DB_USER=postgres
DB_PASSWORD=postgres
DB_POOL_MIN=10
DB_POOL_MAX=100

# Redis
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0

# Queue
QUEUE_REDIS_HOST=localhost
QUEUE_REDIS_PORT=6379
QUEUE_CONCURRENCY=50

# Rate Limiting
RATE_LIMIT_WINDOW_MS=60000
RATE_LIMIT_MAX_REQUESTS=10

# Cache
CACHE_TTL=300

# Monitoring
METRICS_PORT=9090

# Feature Flags
ENABLE_REAL_TIME_VALIDATION=true
ENABLE_EMAIL_NOTIFICATIONS=true
ENABLE_PREMIUM_PRIORITY=true